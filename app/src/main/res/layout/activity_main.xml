<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textTicTacToe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="casual"
        android:text="@string/tic_tac_toe"
        android:textColor="@color/purple_500"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/textTicTacToe"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="casual"
        android:textSize="30sp"
        android:textColor="@color/purple_500" />



    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:columnCount="3"
        android:rowCount="3"  >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:foregroundTint="@color/white"
            android:contentDescription="@string/button1_content_description"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:foregroundTint="@color/white"
            android:contentDescription="@string/button2_content_description"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:foregroundTint="@color/white"
            android:contentDescription="@string/button3_content_description"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:foregroundTint="@color/white"
            android:contentDescription="@string/button4_content_description"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:foregroundTint="@color/white"
            android:contentDescription="@string/button5_content_description"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:foregroundTint="@color/white"
            android:contentDescription="@string/button6_content_description"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:foregroundTint="@color/white"
            android:contentDescription="@string/button7_content_description"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:foregroundTint="@color/white"
            android:contentDescription="@string/button8_content_description"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:foregroundTint="@color/white"
            android:contentDescription="@string/button9_content_description"
            />

    </GridLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/reset_button_text"
        android:textSize="22sp"
        android:textStyle="bold" />


</androidx.constraintlayout.widget.ConstraintLayout>